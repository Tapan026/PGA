[Unit]
Description=Alertmanager
After=network.target

[Service]
Type=simple
User=alertmanager
Group=alertmanager
ExecStart=/usr/local/bin/alertmanager/alertmanager-0.27.0.linux-amd64/alertmanager --config.file=/etc/alertmanager/alertmanager.yml
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
