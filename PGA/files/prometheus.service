[Unit]
Description=Prometheus
After=network.target

[Service]
Type=simple
User={{ prometheus_user }}
Group={{ prometheus_group }}
ExecStart={{ prometheus_home }}/prometheus --config.file={{ prometheus_config_dir }}/prometheus.yml --storage.tsdb.path={{ prometheus_data_dir }}
Restart=on-failure

[Install]
WantedBy=multi-user.target

